<odoo>
    <record id="product_configurator_policy_settings_view_form" model="ir.ui.view">
        <field name="name">product.configurator.mrp.policy.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10" />
        <field
            name="inherit_id"
            ref="product_configurator.configurator_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='product_configurator']" position="inside">
                <block title="Restrictions">
                    <setting string="Default Restriction Policy" help="Set the default policy for restriction processing.">
                        <field name="restriction_policy" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
